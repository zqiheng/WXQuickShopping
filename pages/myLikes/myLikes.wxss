.main-group{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: start;
  align-items: center;
}

.main-group .goods-group{
  width: 100%;
  height: 260rpx;
  margin-top: 4rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  color: #111;
  border-bottom: 1rpx solid #e4e4e4;
}

.goods-group .left{
  width: 300rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.left image{
  width: 220rpx;
  height: 220rpx;
}

.goods-group .right{
  height: 100%;
  width: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
}

.right .title{
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 32rpx;
  margin-right: 36rpx;
}

.right .price{
  text-align: right;
  font-size: 30rpx;
  margin-right: 36rpx;
}


.box-group{
  width: 100%;
  height: 800rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.box-group .title{
  font-size: 32rpx;
  color: #222;
}