<view class='address-group' wx:for="{{addressList}}" wx:key="*this">

  <view class="address-left">
    <view class="name">{{item.consignee}}
      <text decode="{{true}}" space="{{true}}">&nbsp;&nbsp;</text> {{item.mobile}}
    </view>

    <view class="address">
      <view>{{item.address}}</view>
    </view>
    <view class="transportDay">
      <view>{{item.transportDay}}</view>
    </view>
  </view>
  
  <view class="address-right">
    <image src='../../images/tabBar/del.png' data-id="{{index}}" bindtap="delAddress"></image>
  </view>

</view>

<view class="separate" wx:if="{{!isNull}}"></view>

<view class="add-address" bindtap="addAddress">
  <image class="add-img" src="../../images/add.png"></image>新增地址
</view>