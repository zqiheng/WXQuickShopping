            <view class='product-count'>共 {{item.orderDetailsInfoList[0].productNum}} 件商品</view>
          </view>
          <!-- 订单总金额 -->
          <view class='items-money'>
            <view class='money'>¥{{item.orderDetailsInfoList[0].productPrice}}</view>
          </view>
        </view>
      </block>
      <view wx:else class="no-orders-info">暂无订单信息</view>
