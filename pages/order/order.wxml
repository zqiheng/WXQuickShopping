          <!-- 下单门店信息和时间 -->
          <view class='items-ortherInfo'>
            <view class='items-shopInfo'>{{item.shopInfo.shopName}}（{{item.shopInfo.shopID}})</view>
            <view class='items-com-time'>{{item.ordersCreateTime}}</view>
