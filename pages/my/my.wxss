
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #1296db;
  width: 100%; 
  height: 300rpx;
}

.userinfo-btn{
  width: 300rpx;
  height: 90rpx;
  background: none !important;
  color: #fff !important;
  font-size: 32rpx;
  margin-top: 120rpx;
}

.account-bg {
  width: 100%;
  height: 150rpx;
}

.userinfo-avatar {
  width: 146rpx;
  height: 146rpx;
  margin: 40rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #fff;
}

.order {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 90rpx;
}
.myorder-text {
  font-size: 34rpx;
  color: rgb(46, 45, 45);
  margin: 20rpx;
  width: 40%;
}

.myorderlook-text {
  font-size: 30rpx;
  color: gray;
  position: relative;
  right: 20rpx;
  width: 60%;
  text-align: right;
}

.next-image {
  width: 20rpx;
  height: 25rpx;
  position: relative;
  right: 10rpx;
}

.navs {
  display: flex;
  justify-content: space-around;
}

.nav-item {
  width: 25%;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20rpx;
}

.nav-item .nav-image {
  width: 55rpx;
  height: 55rpx;
  margin: 5rpx;
}

.nav-item text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: rgb(46, 45, 45);
}

/* 列表 */
.person-list {
  display: flex;
  flex-direction: column;
  align-items: left;
}

.list-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  margin-top: 20rpx;
}

.item-image {
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx;
}

.item-text {
  color: rgb(46, 45, 45);
  font-size: 30rpx;
  margin-left: 20rpx;
}
.person-line {
  width: 90%;
  height: 1rpx;
  background: lightgray;
  margin-left: 90rpx;
}

