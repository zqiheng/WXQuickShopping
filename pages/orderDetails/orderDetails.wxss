/* pages/orderDetails/orderDetails.wxss */
.main-group{
  width: 100%;
  height: 100%;
  background: #eee;
}

.main-group .top-group{
  width: 100%;
  height: 200rpx;
  background: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
}


/* 顶部信息布局 */
.top-group .group-info{
  width: 100%;
  height: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.group-info .title{
  font-size: 36rpx;
  font-weight: bold;
}

.group-info .more-info{
  font-size: 28rpx;
  color: gray;
}

/* 店铺信息模块布局 */
.main-group .shop-group{
  width: 100%;
  height: 160rpx;
  background: #fff;
  margin-top: 8rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.shop-group .left{
  height: 100%;
  width: 600rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: flex-start;
}

.left .shop-name{
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 36rpx;
  color: #111;
}

.left .shop-address{
  font-size: 28rpx;
  margin-left: 36rpx;
  color: #444;
}

.shop-group .right{
  height: 100%;
  width: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.right image{
  width: 50rpx;
  height: 50rpx;
}

/* 订单信息模块布局 */
.main-group .goods-group{
  width: 100%;
  /* background: #fff; */
  margin-top: 8rpx;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
}

.goods-group .goods-group-top{
  width: 100%;
  height: 80rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.goods-group-top .orders-no{
  font-size: 28rpx;
  color: gray;
  margin-left: 36rpx;
}

.goods-group-top .orders-time{
  font-size: 24rpx;
  color: gray;
  margin-right: 36rpx;
}

.goods-group .goods-group-details{
  width: 100%;
  height: 60rpx;
  margin-top: 2rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.goods-group-details .title{
  width: 70%;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-size: 30rpx;
  font-weight: bold;
  margin-left: 36rpx;
  flex-grow: 1;
  color: #111;
}

.goods-group-details .count{
  width: 15%;
  font-size: 26rpx;
  font-weight: bold;
  flex-grow: 0;
  text-align: right;
  color: #111;
}

.goods-group-details .money{
  width: 15%;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 36rpx;
  flex-grow: 0;
  text-align: right;
  color: #111;
}

/* 订单优惠布局 */
.main-group .discount-group{
  width: 100%;
  height: 80rpx;
  margin-top: 3rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.discount-group .title{
  font-size: 28rpx;
  margin-left: 36rpx;
  font-weight: bold;
  color: #1296db;
}

.discount-group .money{
  font-size: 28rpx;
  margin-right: 36rpx;
  font-weight: bold;
  color: #1296db;
}

/* 顶部信息数量和价格显示布局 */
.main-group .goods-bottom{
  width: 100%;
  height: 100rpx;
  margin-top: 2rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.goods-bottom .left{
  height: 100%;
  width: 50%;
}

.goods-bottom .right{
  height: 100%;
  width: 50%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.right .count{
  font-size: 28rpx;
  color: gray;
}

.right .money{
  font-size: 30rpx;
  color: gray;
}

.right .money text{
  font-size: 30rpx;
  font-weight: bold;
  color: #222;
  margin-right: 36rpx;
}

/* 确认收货按钮布局 */
.confirm-receipt-button {
  width: 60%;
  margin-top: 120rpx;
  background-color: #1296db;
  text-align: center;
  font-size: 34rpx;
  color: #fff;
}






